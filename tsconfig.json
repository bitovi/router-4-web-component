{
  "compilerOptions": {
    "allowImportingTsExtensions": true,
    "composite": true,
    "exactOptionalPropertyTypes": true,
    "isolatedModules": true,
    "module": "ES2022",
    "moduleResolution": "bundler",
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "strict": true,
    "target": "ES2022",
    "verbatimModuleSyntax": true
  }
}
